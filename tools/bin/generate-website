#
# Script to generate static ddpoker.com website from Wicket site running with
# settings.debug.docmode=true.
#
set -euo pipefail

# Load node
source "$HOME/.nvm/nvm.sh"

# Script dir
SDIR=$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")
ROOT=$(dirname "$(dirname "$SDIR")")

# Vars
EXTRACT_JS="${ROOT}/code/pokerwicket/src/main/webapp/extract-links.js"
BASE_URL="http://localhost:8080"
DOMAIN="https://www.ddpoker.com"

# Get paths
PATHS=$(node "$EXTRACT_JS")
echo "Paths from navData:"
echo "${PATHS[@]}"

# Build absolute URLs for wget
URLS=()
for p in ${PATHS}; do
  if [[ "${p}" == "/" ]]; then
    URLS+=("${BASE_URL}${p}")
  else # trailing slash needed so foo/index.html is created for sub-folder
    URLS+=("${BASE_URL}${p}/")
  fi
done

echo "URLs:"
echo "${URLS[@]}"

# Cleanup wget
rm -f ./.wget-hsts || true

# Fetch pages
wget \
  --no-verbose \
  --page-requisites \
  --adjust-extension \
  --no-host-directories \
  --restrict-file-names=unix \
  --execute robots=off \
  "${URLS[@]}"

# Fetch og:image assets (absolute URLs in meta tags, not auto-discovered by wget)
wget --no-verbose -O images/cover.png "${BASE_URL}/images/cover.png"

# Generate sitemap.xml (needed since webcrawlers might not run JS code)
cat > sitemap.xml << 'EOF'
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
EOF

for url in $PATHS; do
    if [[ "$url" =~ "thankyou" ]]; then
      continue
    fi
    echo "  <url><loc>${DOMAIN}${url}</loc></url>" >> sitemap.xml
done

cat >> sitemap.xml << 'EOF'
</urlset>
EOF

# Generate robots.txt
cat > robots.txt << EOF
User-agent: *
Sitemap: ${DOMAIN}/sitemap.xml
EOF

echo
echo "==> Done. Serve locally with:"
echo "==>  python3 -m http.server 8000"
echo
