#
# Script to generate static ddpoker.com website from Wicket site running in with
# settings.debug.docmode=true.
#
set -euo pipefail

# Load node
source "$HOME/.nvm/nvm.sh"

# Script dir
SDIR=$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")
ROOT=$(dirname "$(dirname "$SDIR")")

# Vars
EXTRACT_JS="${ROOT}/code/pokerwicket/src/main/webapp/extract-links.js"
BASE_URL="http://localhost:8080"

# Get paths
PATHS=$(node "$EXTRACT_JS")
echo "Paths from navData:"
echo "${PATHS[@]}"

# Build absolute URLs for wget
URLS=()
for p in ${PATHS}; do
  URLS+=("${BASE_URL}${p}/")
done

# Cleanup wget
rm -f ./.wget-hsts || true

# Cleanup existing
if [[ -f nav.css && -d images && -f nav.css ]]; then
  echo "Deleting exiting files..."
  rm -rvf ./* ./.*
fi

# Fetch pages
wget \
  --no-verbose \
  --page-requisites \
  --adjust-extension \
  --no-host-directories \
  --restrict-file-names=unix \
  --execute robots=off \
  "${URLS[@]}"

# --- Root redirect to home/ ---
cat > index.html <<'EOF'
<!doctype html>
<meta charset="utf-8">
<title>Redirectingâ€¦</title>
<meta http-equiv="refresh" content="0; url=home/">
<link rel="canonical" href="home/">
<script>location.replace("home/");</script>
<p>If you are not redirected, <a href="home/">click here</a>.</p>
EOF

echo
echo "==> Done. Serve locally with:"
echo "==>  python3 -m http.server 8000"
echo
